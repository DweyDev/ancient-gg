{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "noImplicitAny": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "node",
      "lib": ["es2017", "esnext.asynciterable"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  